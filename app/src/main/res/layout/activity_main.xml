<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1600px"
    android:layout_height="720px"
    android:orientation="horizontal"
    tools:context="MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Player2"
            android:layout_width="240px"
            android:layout_height="230px"
            android:layout_row="0"
            android:layout_column="0"
            app:srcCompat="@drawable/gyomei" />

        <TextView
            android:id="@+id/round"
            android:layout_width="match_parent"
            android:layout_height="230px"
            android:layout_row="1"
            android:layout_column="0"
            android:text="TextView" />

        <ImageView
            android:id="@+id/Player1"
            android:layout_width="match_parent"
            android:layout_height="230px"
            android:layout_row="2"
            android:layout_column="0"
            app:srcCompat="@drawable/zenitsu" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="58dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/enemy_hp"
                    android:layout_width="160px"
                    android:layout_height="115px"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/enemy_armor"
                    android:layout_width="160px"
                    android:layout_height="115px"
                    android:text="TextView" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ecard1"
                android:layout_width="160px"
                android:layout_height="230px"
                android:layout_weight="1"
                android:src="@drawable/cardface" />

            <ImageView
                android:id="@+id/ecard2"
                android:layout_width="160px"
                android:layout_height="230px"
                android:layout_weight="1"
                android:src="@drawable/cardface" />

            <ImageView
                android:id="@+id/ecard3"
                android:layout_width="160px"
                android:layout_height="230px"
                android:layout_weight="1"
                android:src="@drawable/cardface" />

            <ImageView
                android:id="@+id/ecard4"
                android:layout_width="160px"
                android:layout_height="230px"
                android:layout_weight="1"
                android:src="@drawable/cardface" />
        </LinearLayout>

        <TextView
            android:id="@+id/place1"
            android:layout_width="match_parent"
            android:layout_height="230px"
            android:text="TextView"
            android:visibility="invisible"
            tools:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/your_hp"
                    android:layout_width="160px"
                    android:layout_height="115px"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/your_armor"
                    android:layout_width="160px"
                    android:layout_height="115px"
                    android:text="TextView" />
            </LinearLayout>

            <TextView
                android:id="@+id/card1"
                android:layout_width="160px"
                android:layout_height="230px"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/card2"
                android:layout_width="160px"
                android:layout_height="230px"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/card3"
                android:layout_width="160px"
                android:layout_height="230px"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/card4"
                android:layout_width="160px"
                android:layout_height="230px"
                android:layout_weight="1" />

        </LinearLayout>
        <![CDATA[





        >



    ]]>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400px"
        android:layout_height="690px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="220px"
            android:layout_height="480px"
            android:text="TextView"
            tools:visibility="invisible" />

        <Button
            android:id="@+id/play"
            android:layout_width="220px"
            android:layout_height="wrap_content"
            android:text="Play" />
    </LinearLayout>

</LinearLayout>